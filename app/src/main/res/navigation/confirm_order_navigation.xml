<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/confirm_order_navigation"
    android:label="Confirm Order"
    app:startDestination="@id/confirmOrderFragment">

    <fragment
        android:id="@+id/confirmOrderFragment"
        android:name="com.application.foodapp.ConfirmOrderFragment"
        android:label="Confirm Order"
        tools:layout="@layout/fragment_confirm_order" >
        <action
            android:id="@+id/action_confirmOrderFragment_to_editOrderFragment"
            app:destination="@id/editOrderFragment" />
    </fragment>
    <fragment
        android:id="@+id/editOrderFragment"
        android:name="com.application.foodapp.EditOrderFragment"
        android:label="Edit Order"
        tools:layout="@layout/fragment_edit_order" />
</navigation>